<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/fpempresa" cookies="false">
    <Resource
          name="jdbc/fpempresa"
          type="javax.sql.DataSource"
          auth="Container"
          driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/fpempresa"
          username="fpempresa" password="fpempresa"
          maxActive="150" maxIdle="50" maxWait="10000"
          validationQuery="SELECT 1 FROM DUAL"
          testOnBorrow="true"
    />    
</Context>
