<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

    <!--Permite usar entre otras la anotaciÃ³n @Autowired -->
    <context:annotation-config/>
    <!--Permite usar entre otras las anotaciones @Component y @Controller -->
    <!-- <context:component-scan base-package="es.fpmislata.examen.datos"/> -->

    <bean class="es.logongas.ix3.persistence.impl.hibernate.dao.DAOFactoryImplHibernate" >
        <property name="domainBasePackageName"  value="es.logongas.fpempresa.modelo" />
        <property name="daoBasePackageName"     value="es.logongas.fpempresa.persistencia.services.dao" />
        <property name="daoImplBasePackageName" value="es.logongas.fpempresa.persistencia.impl.dao" />
    </bean>
    
    <bean id="authenticationManager" class="es.logongas.ix3.security.impl.authentication.AuthenticationManagerImpl"  >
        <property name="authenticationProviders">
            <list>
                <bean class="es.logongas.fpempresa.security.AuthenticationProviderImplUsuario" />
            </list>
        </property>
    </bean>
</beans>
